@using System.Web.UI.WebControls
@model IEnumerable<returns_web.Models.Retpurch>
@{
    var i = 0;
}
<style>
    th {
        text-align: center;
          font-weight:700
    }
</style>
<table id="retPurchTbl" class="table table-striped table-bordered table-hover" style="direction:rtl">
    <tr>
        <th>@Html.DisplayNameFor(model => model.taxrate)</th>
        <th>
            @Html.DisplayNameFor(model => model.purchval)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.purchtax)
        </th>
    </tr>

    @foreach (var item in Model)
    {
        ViewBag.Rowcount = i;
        @Html.Partial("_RetPurchSingle", item)
        i++;
    }


</table>
<table>
    <tr>
        <td>
            <a id="retPurchAdd" href="#" style="font-weight: 700">إضافة مشتريات</a>
        </td>
    </tr>
</table>
