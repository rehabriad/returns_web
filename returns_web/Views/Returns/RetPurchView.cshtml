@model returns_web.Models.Retpurch

<table class="table table-striped table-bordered table-hover" style="direction:rtl">
    <tr>
        <th>@Html.DisplayNameFor(model => model.taxrate)</th>
        <th>
            @Html.LabelFor(model => model.purchval, htmlAttributes: new { @class = "control-label col-md-2" })
        </th>
        <th>
            @Html.LabelFor(model => model.purchtax, htmlAttributes: new { @class = "control-label col-md-2" })
        </th>
    </tr>
    <tr>
        <td>
            <div class="form-group">

                <div class="col-md-10">
                    @Html.EnumDropDownListFor(model => model.taxrate, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.taxrate, "", new { @class = "text-danger" })
                </div>
            </div>
        </td>
        <td>
            <div class="form-group">

                <div class="col-md-10">
                    @Html.EditorFor(model => model.purchval, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.purchval, "", new { @class = "text-danger" })
                </div>
            </div>
        </td>
        <td>
            <div class="form-group">

                <div class="col-md-10">
                    @Html.EditorFor(model => model.purchtax, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.purchtax, "", new { @class = "text-danger" })
                </div>
            </div>
        </td>
    </tr>
</table>