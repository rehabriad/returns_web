@model ST.Entity.Returns


<h2>@ST.Resource.ReturnsResource.viewCreateOrEditH2</h2>


    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.Id)
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

<div class="row">
    
    
    <div class="form-group">
        @Html.LabelFor(model => model.returncode, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EnumDropDownListFor(model => model.returncode, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.returncode, "", new { @class = "text-danger" })

        </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.rin, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.rin, new { @class = "form-control", @readonly = true })
                @Html.ValidationMessageFor(model => model.rin, "", new { @class = "text-danger" })

            </div>

        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.taxyrmo, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.taxyrmo, new { htmlAttributes = new { @class = "form-control", @data_val = "false", data_request_url = Url.Action("CheckExistingTaxyrmo", "returns") } })
                @Html.ValidationMessageFor(model => model.taxyrmo, "", new { @class = "text-danger" })
                <span id="taxyrmo-check" class="field-validation-error text-danger hidden">يوجد اقرار لنفس الفترة</span>
            </div>

        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.transdate, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.transdate, new { htmlAttributes = new { @class = "form-control", @readonly = true } })
                @Html.ValidationMessageFor(model => model.transdate, "", new { @class = "text-danger" })
            </div>

        </div>
    </div>


    <div class="row" role="tabpanel">
    <ul class="nav nav-tabs nav-justified" role="tablist">
        <li role="presentation" class="active">
            <a href="#retsale" aria-controls="home" role="tab" data-toggle="tab">@ST.Resource.ReturnsResource.viewCreateOrEditPurch</a>
        </li>
        <li role="presentation">
            <a href="#retpurch" aria-controls="profile" role="tab" data-toggle="tab">@ST.Resource.ReturnsResource.viewCreateOrEditSales</a>
        </li>
    </ul>
        <!-- Tab panes -->
        <div class="tab-content">
            <div role="tabpanel" class="tab-pane active" id="retsale">@Html.Partial("RetSaleList", Model.retsale)</div>
            <div role="tabpanel" class="tab-pane" id="retpurch">@Html.Partial("RetPurchList", Model.retpurch)</div>
        </div>
</div>




    <br />
    
    <div class="row">
        <div class="col-md-3">
            <div class="form-group-sm">
                @Html.LabelFor(model => model.saleltc, htmlAttributes: new { @class = "control-label" })
                @Html.EditorFor(model => model.saleltc, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.saleltc, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="col-md-3">
            <div class="form-group-sm">
                @Html.LabelFor(model => model.purctdt2, htmlAttributes: new { @class = "control-label" })
                @Html.EditorFor(model => model.purctdt2, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.purctdt2, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="col-md-3">
            <div class="form-group-sm">
                @Html.LabelFor(model => model.nettaxpy, htmlAttributes: new { @class = "control-label" })
                @Html.EditorFor(model => model.nettaxpy, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.nettaxpy, "", new { @class = "text-danger" })
            </div>
        </div>
        
    </div>
    <br />
    <div class="row">
        <div class="form-group">
            <div class="col-md-4">
                <input type="submit" value="@ST.Resource.ReturnsResource.viewCreateOrEditSave" class="btn btn-primary" />
            </div>
        </div>
    </div>




